generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") // uses connection pooling
}

model users {
  id String @id @default(uuid())
  name String
  email String
  password String
  role type_role @default(USER)
  cpfcnpj String?

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())
  
  @@map("users")
}

enum type_role {
  ADMIN
  USER
}